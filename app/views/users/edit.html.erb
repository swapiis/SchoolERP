<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path%></li>
    <li><%= link_to 'Manage User',users_path %></li>
    <li><%= link_to 'User Profile',user_path%></li>
   <li>Edit Profile</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
 <div class="box col-md-2"></div>
  <div class="box col-md-6">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Edit Profile</h2>
    </div>
<br>
    <div class="box-content">
    <fieldset>
  <%= form_for @user do |f| %>
 <%= user_error! %>
   <div class="row">
    <div class="col-sm-8 col-sm-offset-1">
    <div class="form-group">
         

         
         <% if @user == current_user%>
          <b>Username:</b>
             <%= f.text_field :username, class: "form-control", style: "width: 350px", placeholder: ""  %>
        </div>
        <div class="form-group">
        
              <b>First Name:</b>
           
              <%= f.text_field :first_name, class: "form-control", style: "width: 350px", placeholder: "" %>
        </div>
        <div class="form-group">
              <b>Last Name:</b>
              <%= f.text_field :last_name, class: "form-control", style: "width: 350px", placeholder: "" %>
              </div>
        <div class="form-group">
              <b>Email:</b>
              <%= f.text_field :email, class: "form-control", style: "width: 350px", placeholder: ""%>

<%else%>
    <%= f.select :role,["SuperAdmin","Admin", "Employee", "Student","Parent"],{prompt:'Select a Role'},{onchange:"$('#user_form2').submit();",class: "form-control",style:"width:300px"} %>
<%end%>


              </div>
               <div class="form-group">
               <div class="col-md-offset-6">
              <%= f.submit "Update",class: "btn btn-success" %>
              </div></div>
              </div>
              </div>
              </fieldset>

<% end  %>
</div>
</div>
</div>
</div>